<!DOCTYPE html>
<html>
<head>
  <title>School</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= yield(:head) %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="navbar-example" class="navbar navbar-static">
	<div class="navbar-inner">
		<div class="container" style="width: auto;">
			<a class="brand" href="#">School Project</a>
			<ul class="nav" role="navigation">
				<li class="dropdown">
					<a id="drop1" class="dropdown-toggle" data-toggle="dropdown" role="button" href="#">Register <b class="caret"></b></a>
					<ul class="dropdown-menu" aria-labelledby="drop1" role="menu">
						<li><%= link_to "Interprises", interprises_path %></li>
						<li><%= link_to "Courses", courses_path %></li>
						<li><%= link_to "Disciplines", disciplines_path %></li>
						<li><%= link_to "Students", students_path %></li>
						<li><%= link_to "Rotations", rotations_path %></li>
						<li><%= link_to "Teachers", teachers_path %></li>
					</ul>
				</li>
				<li class="dropdown">
					<a id="drop2" class="dropdown-toggle" data-toggle="dropdown" role="button" href="#">Operational <b class="caret"></b></a>
					<ul class="dropdown-menu" aria-labelledby="drop2" role="menu">
						<li><%= link_to "Grades", grades_path %></li>
						<li><%= link_to "Registrations", registrations_path %></li>
					</ul>
				</li>
				<li class="dropdown">
					<a id="drop3" class="dropdown-toggle" data-toggle="dropdown" role="button" href="#">Reports <b class="caret"></b></a>
					<ul class="dropdown-menu" aria-labelledby="drop3" role="menu">
						<li><%= link_to "List Courses", {:controller => "reports", :action => "listar_turmas"}%></li>	
					</ul>
				</li>
			</ul>
			<ul class="nav pull-right">
		</div>
	</div>
</div>
</div>
<div class="container">
	<% if flash[:notice] %>
		<div class="alert alert-success">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<strong><%= flash[:notice]%></strong>
		</div>
	<% end %>
	<% if flash[:alert] %>
		<div class="alert alert-error">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<strong><%= flash[:alert]%></strong>
		</div>
	<% end %>
<%= yield %>
</div>
</body>
</html>
