<legend><%=t :Listing %> <%=t :rotations %></legend>

<table  class="table table-bordered table-striped responsive-utilities">
  <tr>
    <th><%=t :Description %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rotations.each do |rotation| %>
  <tr>
    <td><%= rotation.description %></td>
    <td><%= link_to "<i class='icon-list-alt'></i>&nbsp;".html_safe+I18n.t(:Show), rotation %></td>
    <td><%= link_to "<i class='icon-edit'></i>&nbsp;".html_safe+I18n.t(:Edit), edit_rotation_path(rotation) %></td>
    <td><%= link_to "<i class='icon-remove'></i>&nbsp;".html_safe+I18n.t(:Destroy), rotation, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to I18n.t(:New)+" "+I18n.t(:Rotation), new_rotation_path, :class => "btn" %>
