<h1>Listing grades</h1>

<table>
  <tr>
  	<th>Course</th>
    <th>Discipline</th>    
    <th>Teacher</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @grades.each do |grade| %>
  <tr>
  	<td><%= grade.course.name+"/"+grade.course.rotation.description %></td>
    <td><%= grade.discipline.name %></td>    
    <td><%= grade.teacher.name %></td>
    <td><%= link_to 'Show', grade %></td>
    <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
    <td><%= link_to 'Destroy', grade, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

