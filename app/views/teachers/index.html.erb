<legend><%=t :Teachers %></legend>
<table class="table table-bordered table-striped responsive-utilities">
  <tr>
    <th><%=t :name %></th>
    <th><%=t :hire %></th>    
    <th><%=t :referece_discipline%>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teachers.each do |teacher| %>
  <tr>
  	<td><%= teacher.name %></td>
    <td><%= l teacher.date_hire, :format => :default %></td>
    <td><%= teacher.referece_discipline %></td>
    <td><%= link_to "<i class='icon-list-alt'></i>&nbsp;".html_safe+I18n.t(:Show), teacher %></td>
    <td><%= link_to "<i class='icon-edit'></i>&nbsp;".html_safe+I18n.t(:Edit), edit_teacher_path(teacher) %></td>
    <td><%= link_to "<i class='icon-remove'></i>&nbsp;".html_safe+I18n.t(:Destroy), teacher, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

